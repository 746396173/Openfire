{
  Integer newBuddyId=highestBuddyId + 1;
  Integer groupId=-1;
  for (  GroupItem g : groups.values()) {
    if ("Transport Buddies".equals(g.getGroupName())) {
      groupId=g.getId();
    }
  }
  if (groupId == -1) {
    Integer newGroupId=highestGroupId + 1;
    request(new CreateItemsCmd(new SsiItem[]{new GroupItem("Transport Buddies",newGroupId).toSsiItem()}));
    highestGroupId=newGroupId;
    groupId=newGroupId;
  }
  request(new CreateItemsCmd(new SsiItem[]{new BuddyItem(getTransport().convertJIDToID(jid),newBuddyId,groupId).toSsiItem()}));
}

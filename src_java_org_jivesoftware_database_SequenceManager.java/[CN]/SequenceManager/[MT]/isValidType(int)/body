{
  boolean isValid=false;
  Connection con=null;
  PreparedStatement pstmt=null;
  try {
    con=DbConnectionManager.getConnection();
    pstmt=con.prepareStatement(VERIFY_TYPE);
    pstmt.setInt(1,type);
    ResultSet rs=pstmt.executeQuery();
    if (rs.next()) {
      isValid=true;
    }
  }
 catch (  SQLException sqle) {
    Log.error(sqle);
  }
 finally {
    try {
      if (pstmt != null) {
        pstmt.close();
      }
    }
 catch (    Exception e) {
      Log.error(e);
    }
    try {
      if (con != null) {
        con.close();
      }
    }
 catch (    Exception e) {
      Log.error(e);
    }
  }
  return isValid;
}

{
  if (JiveGlobals.getBooleanProperty("log.httpbind.enabled",false)) {
    System.out.println(new Date() + ": HTTP ERR(" + session.getStreamID().getID()+ "): "+ bindingError.getErrorType().getType()+ ", "+ bindingError.getCondition()+ ".");
  }
  try {
    if (session.getVersion() >= 1.6) {
      respond(session,response,createErrorBody(bindingError.getErrorType().getType(),bindingError.getCondition()),request.getMethod());
    }
 else {
      sendLegacyError(response,bindingError);
    }
  }
  finally {
    if (bindingError.getErrorType() == BoshBindingError.Type.terminal) {
      session.close();
    }
  }
}

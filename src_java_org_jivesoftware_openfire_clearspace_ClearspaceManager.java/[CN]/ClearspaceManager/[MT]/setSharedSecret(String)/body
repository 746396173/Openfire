{
  ExternalComponentConfiguration configuration=new ExternalComponentConfiguration("clearspace",true,ExternalComponentConfiguration.Permission.allowed,sharedSecret);
  try {
    ExternalComponentManager.allowAccess(configuration);
  }
 catch (  ModificationNotAllowedException e) {
    Log.warn("Failed to configure password for Clearspace",e);
  }
  this.sharedSecret=sharedSecret;
  properties.put("clearspace.sharedSecret",sharedSecret);
}

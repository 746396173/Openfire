{
  Thread restartThread=new Thread(){
    public void run(){
      if (isStandAlone()) {
        try {
          Thread.sleep(1000);
          ((AdminConsolePlugin)pluginManager.getPlugin("admin")).shutdown();
          ((AdminConsolePlugin)pluginManager.getPlugin("admin")).startup();
        }
 catch (        Exception e) {
          e.printStackTrace();
        }
      }
    }
  }
;
  restartThread.setContextClassLoader(loader);
  restartThread.start();
}

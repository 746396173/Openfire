{
  int setting=JiveGlobals.getIntProperty("plugin.gateway." + type.toString() + ".registration",1);
  if (setting == 1) {
    return true;
  }
  if (setting == 3) {
    return false;
  }
  if (isUserAllowed(type,jid)) {
    return true;
  }
  if (isUserInAllowedGroup(type,jid)) {
    return true;
  }
  return false;
}

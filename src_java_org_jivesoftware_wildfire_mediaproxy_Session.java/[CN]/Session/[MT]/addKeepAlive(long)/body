{
  if (keepAliveTimer != null)   return;
  keepAliveTimer=new Timer();
  keepAliveTimer.scheduleAtFixedRate(new TimerTask(){
    long lastTimeStamp=getTimestamp();
    public void run(){
      if (lastTimeStamp == getTimestamp()) {
        stopAgent();
        return;
      }
      lastTimeStamp=getTimestamp();
    }
  }
,delay,delay);
}

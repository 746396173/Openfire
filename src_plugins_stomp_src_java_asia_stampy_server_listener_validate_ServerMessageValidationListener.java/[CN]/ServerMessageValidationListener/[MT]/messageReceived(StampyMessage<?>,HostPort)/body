{
switch (message.getMessageType()) {
case ABORT:
case ACK:
case BEGIN:
case COMMIT:
case CONNECT:
case STOMP:
case DISCONNECT:
case NACK:
case SEND:
case SUBSCRIBE:
case UNSUBSCRIBE:
    message.validate();
  break;
default :
throw new IllegalArgumentException(message.getMessageType() + " is not a valid STOMP 1.2 client message");
}
}

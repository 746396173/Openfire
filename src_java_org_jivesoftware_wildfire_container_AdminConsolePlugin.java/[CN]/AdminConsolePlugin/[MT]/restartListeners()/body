{
  try {
    String restarting=LocaleUtils.getLocalizedString("admin.console.restarting");
    System.out.println(restarting);
    Log.info(restarting);
    jetty.stop();
    if (plainListener != null) {
      jetty.removeListener(plainListener);
      plainListener=null;
    }
    if (secureListener != null) {
      jetty.removeListener(secureListener);
      secureListener=null;
    }
    jetty.removeContext(context);
    loadListeners();
    if (Boolean.getBoolean("developmentMode")) {
      System.out.println(LocaleUtils.getLocalizedString("admin.console.devmode"));
      context=jetty.addWebApplication("/",pluginDir.getParentFile().getParentFile().getParentFile().getParent() + File.separator + "src"+ File.separator+ "web");
    }
 else {
      context=jetty.addWebApplication("/",pluginDir.getAbsoluteFile() + File.separator + "webapp");
    }
    context.setWelcomeFiles(new String[]{"index.jsp"});
    jetty.start();
    printListenerMessages();
  }
 catch (  Exception e) {
    Log.error(e);
  }
}

{
  byte firstByte=source.readByte();
  int numBytes=0;
  long mask=0x0080;
  for (int i=0; i < 8; i++) {
    if ((firstByte & mask) == mask) {
      numBytes=i + 1;
      i=8;
    }
    mask>>>=1;
  }
  if (numBytes == 0)   return null;
  byte[] data=new byte[numBytes];
  data[0]=(byte)((firstByte));
  if (numBytes > 1) {
    source.read(data,1,numBytes - 1);
  }
  return data;
}

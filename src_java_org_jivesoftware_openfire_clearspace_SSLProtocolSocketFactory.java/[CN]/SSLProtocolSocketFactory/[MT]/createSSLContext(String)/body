{
  try {
    final SSLContext context=SSLContext.getInstance("TLSv1");
    context.init(null,new TrustManager[]{new ClearspaceX509TrustManager(host,manager.getProperties(),CertificateStoreManager.getTrustStore(ConnectionType.SOCKET_S2S).getStore())},null);
    return context;
  }
 catch (  Exception e) {
    Log.error("An exception occurred while trying to create an SSL Context for host: '" + host + "'",e);
    throw new HttpClientError(e.toString());
  }
}

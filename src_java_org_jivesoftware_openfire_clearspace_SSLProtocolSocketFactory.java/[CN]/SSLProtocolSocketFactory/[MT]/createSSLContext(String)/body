{
  try {
    final SSLContext context=SSLConfig.getSSLContext(Purpose.ADMIN);
    context.init(null,new TrustManager[]{new ClearspaceX509TrustManager(host,manager.getProperties(),SSLConfig.getTrustStore(Purpose.ADMIN))},null);
    return context;
  }
 catch (  Exception e) {
    Log.error(e.getMessage(),e);
    throw new HttpClientError(e.toString());
  }
}

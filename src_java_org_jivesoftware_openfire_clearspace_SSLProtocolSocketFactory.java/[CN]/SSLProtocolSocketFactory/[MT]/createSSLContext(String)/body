{
  try {
    final SSLContext context=SSLConfig.getSSLContext();
    context.init(null,new TrustManager[]{new ClearspaceX509TrustManager(host,manager.getProperties(),SSLConfig.getStore(Purpose.ADMINISTRATIVE_TRUSTSTORE))},null);
    return context;
  }
 catch (  Exception e) {
    Log.error(e.getMessage(),e);
    throw new HttpClientError(e.toString());
  }
}

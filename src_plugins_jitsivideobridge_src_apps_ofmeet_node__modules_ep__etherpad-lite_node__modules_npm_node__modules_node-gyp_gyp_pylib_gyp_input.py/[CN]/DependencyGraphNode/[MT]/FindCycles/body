def FindCycles(self, path=None):
    '\n    Returns a list of cycles in the graph, where each cycle is its own list.\n    '
    if (path is None):
        path = [self]
    results = []
    for node in self.dependents:
        if (node in path):
            cycle = [node]
            for part in path:
                cycle.append(part)
                if (part == node):
                    break
            results.append(tuple(cycle))
        else:
            results.extend(node.FindCycles(([node] + path)))
    return list(set(results))

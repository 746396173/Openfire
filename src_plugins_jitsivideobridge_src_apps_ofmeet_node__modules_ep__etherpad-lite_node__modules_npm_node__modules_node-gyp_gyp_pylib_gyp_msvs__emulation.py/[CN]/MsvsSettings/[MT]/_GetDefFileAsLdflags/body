def _GetDefFileAsLdflags(self, ldflags, gyp_to_build_path):
    '.def files get implicitly converted to a ModuleDefinitionFile for the\n    linker in the VS generator. Emulate that behaviour here.'
    def_file = self.GetDefFile(gyp_to_build_path)
    if def_file:
        ldflags.append(('/DEF:"%s"' % def_file))

def ExecManifestToRc(self, arch, *args):
    'Creates a resource file pointing a SxS assembly manifest.\n    |args| is tuple containing path to resource file, path to manifest file\n    and resource name which can be "1" (for executables) or "2" (for DLLs).'
    (manifest_path, resource_path, resource_name) = args
    with open(resource_path, 'wb') as output:
        output.write(('#include <windows.h>\n%s RT_MANIFEST "%s"' % (resource_name, os.path.abspath(manifest_path).replace('\\', '/'))))

def ExecRecursiveMirror(self, source, dest):
    'Emulation of rm -rf out && cp -af in out.'
    if os.path.exists(dest):
        if os.path.isdir(dest):
            shutil.rmtree(dest)
        else:
            os.unlink(dest)
    if os.path.isdir(source):
        shutil.copytree(source, dest)
    else:
        shutil.copy2(source, dest)

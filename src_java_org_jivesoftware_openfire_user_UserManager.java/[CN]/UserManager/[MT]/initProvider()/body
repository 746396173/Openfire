{
  String className=JiveGlobals.getXMLProperty("provider.user.className","org.jivesoftware.openfire.user.DefaultUserProvider");
  if (provider == null || !className.equals(provider.getClass().getName())) {
    try {
      Class c=ClassUtils.forName(className);
      provider=(UserProvider)c.newInstance();
    }
 catch (    Exception e) {
      Log.error("Error loading user provider: " + className,e);
      provider=new DefaultUserProvider();
    }
  }
}

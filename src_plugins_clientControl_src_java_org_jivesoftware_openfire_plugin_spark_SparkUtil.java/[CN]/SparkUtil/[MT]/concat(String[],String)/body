{
  if (strs != null) {
    final StringBuffer buf=new StringBuffer();
    final int n=strs.length;
    for (int i=0; i < n; i++) {
      final String str=strs[i];
      if (str != null) {
        buf.append(str).append(delim);
      }
    }
    final int length=buf.length();
    if (length > 0) {
      buf.setLength(length - 1);
    }
    return buf.toString();
  }
 else {
    return "";
  }
}

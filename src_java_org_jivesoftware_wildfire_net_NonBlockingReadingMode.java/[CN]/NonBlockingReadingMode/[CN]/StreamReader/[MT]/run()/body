{
  try {
    if (!isReading) {
      isReading=true;
      xmlLightWeightParser.read();
      if (xmlLightWeightParser.areThereMsgs()) {
        String[] msgs=xmlLightWeightParser.getMsgs();
        for (int i=0; i < msgs.length; i++) {
          readStream(msgs[i]);
        }
      }
    }
  }
 catch (  IOException e) {
    if (socketReader.session != null) {
      SessionManager.getInstance().removeSession(SessionManager.getInstance().getSession(socketReader.session.getAddress()));
    }
    try {
      xmlLightWeightParser.getChannel().close();
    }
 catch (    IOException e1) {
    }
  }
catch (  Exception e) {
    if (socketReader.session != null) {
      Log.warn(LocaleUtils.getLocalizedString("admin.error.stream") + ". Session: " + socketReader.session,e);
    }
    e.printStackTrace();
  }
 finally {
    isReading=false;
    isScheduled=false;
  }
}

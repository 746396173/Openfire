{
  if (in == null) {
    return null;
  }
  char ch;
  int i=0;
  int last=0;
  char[] input=in.toCharArray();
  int len=input.length;
  StringBuffer out=new StringBuffer((int)(len * 1.3));
  for (; i < len; i++) {
    ch=input[i];
    if (ch > '>') {
      continue;
    }
 else     if (ch == '<') {
      if (i > last) {
        out.append(input,last,i - last);
      }
      last=i + 1;
      out.append(LT_ENCODE);
    }
 else     if (ch == '>') {
      if (i > last) {
        out.append(input,last,i - last);
      }
      last=i + 1;
      out.append(GT_ENCODE);
    }
  }
  if (last == 0) {
    return in;
  }
  if (i > last) {
    out.append(input,last,i - last);
  }
  return out.toString();
}

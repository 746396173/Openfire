{
  Document xmlResponse;
  File file=new File(JiveGlobals.getHomeDirectory() + File.separator + "conf","updates.xml");
  if (!file.exists()) {
    return null;
  }
  if (!file.canRead()) {
    Log.warn("Cannot retrieve available updates. File must be readable: " + file.getName());
    return null;
  }
  FileReader reader=null;
  try {
    reader=new FileReader(file);
    SAXReader xmlReader=new SAXReader();
    xmlResponse=xmlReader.read(reader);
  }
 catch (  Exception e) {
    Log.error("Error reading updates.xml",e);
    return null;
  }
 finally {
    if (reader != null) {
      try {
        reader.close();
      }
 catch (      Exception e) {
      }
    }
  }
  return xmlResponse.getRootElement();
}

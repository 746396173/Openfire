{
  if (enabled == isClientListenerEnabled()) {
    return;
  }
  if (enabled) {
    JiveGlobals.setProperty("xmpp.socket.plain.active","true");
    createClientListeners();
    startClientListeners(localIPAddress);
  }
 else {
    JiveGlobals.setProperty("xmpp.socket.plain.active","false");
    stopClientListeners();
  }
}

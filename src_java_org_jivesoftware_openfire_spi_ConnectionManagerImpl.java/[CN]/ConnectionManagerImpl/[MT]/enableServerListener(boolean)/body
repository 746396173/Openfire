{
  if (enabled == isServerListenerEnabled()) {
    return;
  }
  if (enabled) {
    JiveGlobals.setProperty("xmpp.server.socket.active","true");
    createServerListener(localIPAddress);
    startServerListener();
  }
 else {
    JiveGlobals.setProperty("xmpp.server.socket.active","false");
    stopServerListener();
  }
}

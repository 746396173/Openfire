{
synchronized (users) {
    ChatUser user=(ChatUser)users.remove(jabberID);
    if (user != null) {
      Iterator roles=user.getRoles();
      while (roles.hasNext()) {
        ChatRole role=(ChatRole)roles.next();
        try {
          role.getChatRoom().leaveRoom(role.getNickname());
        }
 catch (        Exception e) {
          Log.error(e);
        }
      }
    }
  }
}

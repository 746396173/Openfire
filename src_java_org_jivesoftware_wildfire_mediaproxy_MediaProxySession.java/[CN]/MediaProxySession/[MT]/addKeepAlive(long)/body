{
  if (idleTimer != null)   return;
  idleTimer=new Timer();
  idleTimer.scheduleAtFixedRate(new TimerTask(){
    long lastTimeStamp=getTimestamp();
    public void run(){
      if (lastTimeStamp == getTimestamp()) {
        stopAgent();
        return;
      }
      lastTimeStamp=getTimestamp();
    }
  }
,delay,delay);
}

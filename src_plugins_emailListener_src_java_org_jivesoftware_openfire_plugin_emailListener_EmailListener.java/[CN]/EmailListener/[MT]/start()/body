{
  if (started) {
    return;
  }
  Thread thread=new Thread("Email Listener Thread"){
    public void run(){
      folder=openFolder(getHost(),getPort(),isSSLEnabled(),getUser(),getPassword(),getFolder());
      if (folder != null) {
        listenMessages();
      }
    }
  }
;
  thread.setDaemon(true);
  thread.start();
  started=true;
}

{
  BasicUserInfo userInfo=null;
  Connection con=null;
  PreparedStatement pstmt=null;
  try {
    con=DbConnectionManager.getConnection();
    pstmt=con.prepareStatement(LOAD_USER_BY_USERNAME);
    pstmt.setString(1,username);
    ResultSet rs=pstmt.executeQuery();
    if (!rs.next()) {
      throw new UserNotFoundException();
    }
    userInfo=new BasicUserInfo(username,rs.getString(1),rs.getString(2),new java.util.Date(Long.parseLong(rs.getString(3).trim())),new java.util.Date(Long.parseLong(rs.getString(4).trim())));
  }
 catch (  SQLException e) {
    throw new UserNotFoundException("Failed to read user " + username + " from database.",e);
  }
catch (  NumberFormatException nfe) {
    Log.error("WARNING: There was an error parsing the dates " + "returned from the database. Ensure that they're being stored " + "correctly.");
    throw new UserNotFoundException("User " + username + " could not be loaded from the database.");
  }
 finally {
    try {
      if (pstmt != null) {
        pstmt.close();
      }
    }
 catch (    Exception e) {
      Log.error(e);
    }
    try {
      if (con != null) {
        con.close();
      }
    }
 catch (    Exception e) {
      Log.error(e);
    }
  }
  return userInfo;
}

{
  this.hosts=hosts;
  StringBuilder hostProperty=new StringBuilder();
  for (  String host : hosts) {
    hostProperty.append(host).append(",");
  }
  if (!hosts.isEmpty()) {
    hostProperty.setLength(hostProperty.length() - 1);
  }
  JiveGlobals.setXMLProperty("ldap.host",hostProperty.toString());
}

{
  JiveGlobals.setJiveProperty("database.defaultProvider.driver",driver);
  JiveGlobals.setJiveProperty("database.defaultProvider.serverURL",serverURL);
  JiveGlobals.setJiveProperty("database.defaultProvider.username",username);
  JiveGlobals.setJiveProperty("database.defaultProvider.password",password);
  JiveGlobals.setJiveProperty("database.defaultProvider.minConnections",Integer.toString(minConnections));
  JiveGlobals.setJiveProperty("database.defaultProvider.maxConnections",Integer.toString(maxConnections));
  JiveGlobals.setJiveProperty("database.defaultProvider.connectionTimeout",Double.toString(connectionTimeout));
}

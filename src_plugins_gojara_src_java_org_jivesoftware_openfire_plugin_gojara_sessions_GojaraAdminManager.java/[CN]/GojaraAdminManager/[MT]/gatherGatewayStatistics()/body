{
  if (refreshCooldown == 0) {
    refreshCooldown=System.currentTimeMillis();
  }
 else {
    if ((System.currentTimeMillis() - refreshCooldown) < 60000)     return;
  }
  refreshCooldown=System.currentTimeMillis();
  for (  String gateway : configuredGateways) {
    gatherGatewayStatistics(gateway);
  }
}

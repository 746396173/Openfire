{
  if (writeStarted > -1 && System.currentTimeMillis() - writeStarted > JiveGlobals.getIntProperty("xmpp.session.sending-limit",60000)) {
    if (Log.isDebugEnabled()) {
      Log.debug("Closing connection: " + this + " that started sending data at: "+ new Date(writeStarted));
    }
    forceClose();
    return true;
  }
 else {
    if (idleTimeout > -1 && socketReader != null && System.currentTimeMillis() - socketReader.getLastActive() > idleTimeout) {
      if (Log.isDebugEnabled()) {
        Log.debug("Closing connection that has been idle: " + this);
      }
      forceClose();
      return true;
    }
  }
  return false;
}
